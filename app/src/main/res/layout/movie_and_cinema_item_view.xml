<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/movie_and_cin_shape_bg"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/salon_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="XXX"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:id="@+id/layout_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_t"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/salon_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="XXX"
                android:textColor="@color/color333"
                android:textSize="@dimen/sp_24" />

            <View
                android:id="@+id/v"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toRightOf="@id/salon_begin"
                android:background="@color/color666" />

            <TextView
                android:id="@+id/salon_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/v"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="XXX"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/salon_begin"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/salon_end"
                android:textColor="@color/color666"
                android:text="end" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_alignBottom="@id/salon_price"
                android:text="Â¥"/>
            <TextView
                android:id="@+id/salon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_36"
                android:textColor="#b11450"
                android:layout_toRightOf="@id/q"
                android:includeFontPadding="false" />

            <ImageView
                android:id="@+id/salon_back"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/com_icon_next_default"
                android:layout_toRightOf="@id/salon_price"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>