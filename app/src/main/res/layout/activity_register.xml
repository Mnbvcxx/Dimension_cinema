<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    >
    <!--昵称-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/register_icon_name_default"
            />
        <EditText
            android:id="@+id/reg_txt_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--性别-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/register_icon_sex_default"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="性别"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            android:digits="男女"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--出生日期-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/register_icon_date_default"
            />
        <EditText
            android:id="@+id/reg_txt_dte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/birthdate"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            android:inputType="date"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--手机号-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/register_icon_phone_default"
            />
        <EditText
            android:id="@+id/reg_txt_pho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            android:inputType="number"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--邮箱-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/register_icon_mail_default"
            />
        <EditText
            android:id="@+id/reg_txt_eml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--登录密码-->
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/register_icon_lock_default"
            />
        <EditText
            android:id="@+id/reg_txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@null"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:background="#1Affffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <!--注册按钮-->
    <Button
        android:id="@+id/reg_button"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_78"
        android:layout_gravity="center"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/shape_register_button"
        />
</LinearLayout>