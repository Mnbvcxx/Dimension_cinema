<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/adapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/adapter_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"
        android:layout_below="@id/adapter_title"
        />
    <TextView
        android:id="@+id/adapter_pushtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/adapter_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:background="@drawable/frag_myacty_adpter_status"
        android:layout_below="@id/adapter_pushtime"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        />
    <View
        android:layout_width="@dimen/dp_312"
        android:layout_height="2dp"
        android:layout_below="@id/adapter_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#81111111"
        />
</RelativeLayout>