<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/evaluate_sdv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        fresco:placeholderImage="@mipmap/icon"
        fresco:roundAsCircle="true"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:progressBarImage="@drawable/loading_"
        fresco:roundingBorderWidth="2dp"
        fresco:roundingBorderColor="@color/colorA999"/>

    <TextView
        android:id="@+id/evaluate_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/evaluate_sdv"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/evaluate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluate_sdv"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/evaluate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluate_count"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color999"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/evaluate_thumbs"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/evaluate_count"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@id/evaluate_num"
        android:background="@mipmap/com_icon_praise_default" />

    <TextView
        android:id="@+id/evaluate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluate_count"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/evaluate_thumbs"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorA999"
        android:layout_marginBottom="@dimen/dp_10"/>

</RelativeLayout>