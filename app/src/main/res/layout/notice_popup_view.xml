<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@drawable/details_popup_bg">

        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_pp_img"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/yg"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:layout_below="@id/notice"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/movie_shape_bg_failed" />

        <ImageView
            android:id="@+id/notice_pp_xl"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:src="@mipmap/com_icon_down_default" />


       <android.support.v7.widget.RecyclerView
           android:layout_below="@id/notice_pp_xl"
           android:layout_marginTop="@dimen/dp_20"
           android:id="@+id/notice_rv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

    </RelativeLayout>


</RelativeLayout>