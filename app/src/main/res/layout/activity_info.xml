<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_30"
        />
    <!--用户头像-->
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_178"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/frag_myacty_infoacty"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:fresco="http://schemas.android.com/tools"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户头像"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/info_sdv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            fresco:placeholderImage="@drawable/ic_launcher"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="#fcc"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_272"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:layout_gravity="center_horizontal"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="@dimen/dp_10"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="用户昵称"
             android:textSize="@dimen/sp_14"
             android:textColor="#333333"
             android:layout_marginLeft="@dimen/dp_20"
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             />
         <TextView
             android:id="@+id/info_nick"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#999999"
             android:textSize="@dimen/sp_14"
             android:layout_marginRight="@dimen/dp_20"
             />
     </LinearLayout>
        <View
            android:layout_width="@dimen/dp_272"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户性别"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_20"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_272"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_20"
                />
        </LinearLayout>

    </LinearLayout>

    <!--手机号-->
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/frag_myacty_infoacty"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/info_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_272"
            android:layout_height="2dp"
            android:background="#f2f2f2"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/info_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_20"
                />
        </LinearLayout>
    </LinearLayout>

    <!--重置密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/frag_myacty_infoacty"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/info_reset_psw"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            fresco:placeholderImage="@drawable/ic_launcher"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@mipmap/com_icon_next_default"
            />
    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/info_request"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        fresco:placeholderImage="@drawable/ic_launcher"
        android:background="@mipmap/com_icon_default"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
</LinearLayout>