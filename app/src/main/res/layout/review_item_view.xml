<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/dp_10">


    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/review_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@drawable/loading_"
            fresco:backgroundImage="@color/color333"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="@dimen/dp_3"
            fresco:roundingBorderColor="@color/color999"
            fresco:roundingBorderWidth="@dimen/dp_1" />

        <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/review_img"
            android:text="XXXX"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/review_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="4" />


        <ImageView
            android:id="@+id/review_comment"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignBottom="@id/review_tiem"
            android:layout_toLeftOf="@id/review_comment_count"
            android:src="@mipmap/com_icon_comment_default" />

        <TextView
            android:id="@+id/review_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/review_tiem"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_12" />


        <ImageView
            android:id="@+id/review_dz"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignBottom="@id/review_tiem"
            android:layout_toLeftOf="@id/review_dz_count"
            android:src="@mipmap/com_icon_praise_default" />

        <TextView
            android:id="@+id/review_dz_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/review_tiem"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_toLeftOf="@id/review_comment"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/review_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_desc"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="XXXX"
            android:textColor="@color/color999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@id/review_tiem"
            android:layout_centerHorizontal="true"
            android:background="@color/colorA999" />

    </RelativeLayout>

</RelativeLayout>