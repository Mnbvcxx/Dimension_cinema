<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/movie_and_cin_shape_bg"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_20"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wait_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="铁血"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color333"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/wait_butt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="去付款"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorfff"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/record_adapter_wait_butt"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/wait_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/wait_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="影院"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/wait_hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="影厅"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/wait_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/wait_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/wait_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="金额"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        />



</LinearLayout>