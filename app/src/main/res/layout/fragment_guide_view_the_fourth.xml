<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fourth">


    <ImageView
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:src="@mipmap/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_150"
        android:id="@+id/guide_img"/>

    <TextView
        android:id="@+id/guide_yc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/baway"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color333"
        android:layout_below="@id/guide_img"
        android:layout_marginTop="@dimen/dp_60"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/dn"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color333"
        android:layout_below="@id/guide_yc"
        android:layout_marginTop="@dimen/dp_20"/>
    <Button
        android:id="@+id/guide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:text="立即体验"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#5be2e61a"
        />
    <LinearLayout
        android:layout_below="@id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_74"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/guide_point_normal"/>
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/guide_point_normal"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/guide_point_normal"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/guide_point_selecter"/>

    </LinearLayout>


</RelativeLayout>