<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/dp_158"
        android:layout_height="@dimen/dp_223">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/flow_sdv"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_258"
            fresco:roundedCornerRadius="@dimen/dp_8"
            fresco:placeholderImage="@color/colorRed"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_m_r_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/flow_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="2"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/colorfff"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/flow_tiem"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorfff"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>