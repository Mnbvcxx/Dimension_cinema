<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.fragment.adapter.activity.MovieTicketActivity">

    <TextView
        android:id="@+id/tick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_35"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/xz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tick_name"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/xuanz"
        android:textColor="#b11450"
        android:textSize="@dimen/sp_10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tick_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xz"
        android:layout_marginTop="@dimen/dp_10" />

    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:id="@+id/tick_back"
        android:src="@mipmap/com_icon_default"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"/>


</RelativeLayout>